  </ItemGroup>
  <ItemGroup>
    <Folder Include="DataAccess\Base\" />
    <Folder Include="DataAccess\MySQL\" />
    <Folder Include="Logger\" />
  </ItemGroup>
  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="dotnet pack" />
    <Exec Command="cp -Rf bin/Debug/DarkFactor.Common.Lib.*.nupkg /Users/thorh/NuGet/" />
  </Target>
</Project>

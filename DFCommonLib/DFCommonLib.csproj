<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <PackageId>DarkFactor.Common.Lib</PackageId>
    <Version>1.0.2</Version>

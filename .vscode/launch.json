{
   // Use IntelliSense to find out which attributes exist for C# debugging
   // Use hover for the description of the existing attributes
   // For further information visit https://github.com/OmniSharp/omnisharp-vscode/blob/master/debugger-launchjson.md
   "version": "0.2.0",
   "configurations": [

        {
            "name": "Bot WebServer",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/BotWebServer/bin/Debug/netcoreapp3.1/BotWebServer.dll",
            "args": [],
            "cwd": "${workspaceFolder}/BotWebServer",
            "stopAtEntry": false,
            // Enable launching a web browser when ASP.NET Core starts. For more information: https://aka.ms/VSCode-CS-LaunchJson-WebBrowser
            //"serverReadyAction": {
            //    "action": "openExternally",
            //    "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            //},
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            },
            "console": "integratedTerminal",
            // enable this to get normal console window
            //"console": "externalTerminal",
        },
        {
            "name": "AccountServer",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build_account",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/AccountServer/bin/Debug/netcoreapp3.1/AccountServer.dll",
            "args": [],
            "cwd": "${workspaceFolder}/AccountServer",
            "stopAtEntry": false,
            // Enable launching a web browser when ASP.NET Core starts. For more information: https://aka.ms/VSCode-CS-LaunchJson-WebBrowser
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                //"ASPNETCORE_URLS": "http://[::]:5100/"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            },
            "console": "integratedTerminal",
            // enable this to get normal console window
            //"console": "externalTerminal",
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}